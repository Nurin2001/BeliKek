<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <!-- Product Image -->
    <ImageView
        android:id="@+id/cart_item_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_image_background"
        android:src="@drawable/ic_default_background" />

    <!-- Product Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cart_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baby Shark"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/cart_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RM 99.00"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/cart_item_description1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chocolate Moist"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/cart_item_description2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chocolate Fudge"
            android:textSize="12sp"
            android:textColor="#666666"/>

        <TextView
            android:id="@+id/cart_item_description3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toys"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

    <!-- Right side controls -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Delete button -->
        <ImageButton
            android:id="@+id/cart_item_delete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@null"
            android:src="@drawable/ic_delete"
            android:contentDescription="Delete item"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Quantity controls -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Decrease button -->
            <ImageButton
                android:id="@+id/cart_item_decrease"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_subtract"
                android:contentDescription="Decrease quantity" />

            <!-- Quantity text -->
            <TextView
                android:id="@+id/cart_item_quantity"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="#E91E63"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <!-- Increase button -->
            <ImageButton
                android:id="@+id/cart_item_increase"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_add"
                android:contentDescription="Increase quantity" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>